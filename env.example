# ABE Portal - Environment Configuration

# Common Settings
APP_NAME="ABE Portal"
JWT_SECRET="CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_AT_LEAST_32_CHARS"
RATE_LIMIT_LOGIN_PER_MIN=10
RATE_LIMIT_SEARCH_PER_MIN=60
RATE_LIMIT_DOWNLOAD_PER_MIN=60

# Database
POSTGRES_DSN="postgresql+psycopg://abeportal:secure_password@db:5432/abeportal"
REDIS_URL="redis://redis:6379/0"

# Paperless-ngx Integration
PAPERLESS_BASE_URL="https://your-paperless.example.com"
PAPERLESS_API_TOKEN="your-paperless-api-token-here"

# OCR Settings (Standalone mode - keep disabled)
ENABLE_STANDALONE_OCR="false"
MAX_UPLOAD_MB=50

# Frontend Configuration
BACKEND_BASE_URL="http://backend:8000"
PUBLIC_PORTAL_BASE_URL="https://your-portal.example.com"

# First Admin Bootstrap (Optional)
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="ChangeThisSecurePassword123!"

# Security Settings
ALLOW_SELF_SIGNUP="false"
SESSION_TIMEOUT_HOURS=24

# Search Configuration
SEARCH_RESULTS_LIMIT=50
ENUMBER_SEARCH_TOLERANCE=0.8

# Audit Settings
AUDIT_RETENTION_DAYS=365
